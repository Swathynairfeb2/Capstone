<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/purpleb</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/PopupMenuTextAppearance</item>
    </style>

    <style name="PopupMenuTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/alegreya_italic</item>
    </style>

    <style name="AlertDialogCustomStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/peachbutton</item> <!-- Customize the button color -->
        <item name="android:textColor">@color/white</item> <!-- Customize the button text color -->
        <item name="android:background">@color/purpleb</item>
        <item name="android:fontFamily">@font/alegreya_italic</item>
        <!-- Add more customizations if needed -->
    </style>
    <style name="CustomToast">
        <item name="android:background">@color/purple</item> <!-- Customize the background -->
        <item name="android:textColor">@color/white</item> <!-- Customize the text color -->
        <item name="android:fontFamily">@font/alegreya_italic</item>
        <!-- Add more customizations if needed -->
    </style>

    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/purpleb</item>
        <item name="itemIconTint">@color/peachbutton</item>
        <item name="android:textColor">@color/bottom_menu_text_color</item>
        <item name="android:fontFamily">@font/alegreya_italic</item>
    </style>

    <style name="BottomMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/bottom_menu_text_color</item>
        <item name="android:fontFamily">@font/alegreya_italic</item>
    </style>




</resources>
