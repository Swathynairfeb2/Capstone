<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlanAhead_Capstone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
            <!-- Background color for dark mode -->
            <item name="android:windowBackground">@color/darkBackground</item>
            <!-- Text color for dark mode -->
            <item name="android:textColor">@color/darkText</item>
            <!-- Any other customizations for dark mode -->

        <!-- Customize your theme here. -->


        </style>
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your dark mode theme here -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color for dark mode -->
        <item name="android:windowBackground">@color/darkBackground</item>
        <!-- Text color for dark mode -->
        <item name="android:textColor">@color/darkText</item>

        <!-- Add other customizations for dark mode -->
    </style>

</resources>